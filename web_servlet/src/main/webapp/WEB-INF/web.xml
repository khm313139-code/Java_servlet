<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>web_servlet</display-name>
  
  <!-- servlet 태그는 class => web에서 실행 시킬 수 있도록 만들어주는 태그 -->
  
  <servlet>
  	<servlet-name>search_name</servlet-name><!-- 가상의 이름(별명명칭) -->
  	<servlet-class>web_servlet.servlet1</servlet-class><!-- 패키지 안에 클래스 있는지 확인 - 실제 java class 명 및 위치한 패키지명 -->
  </servlet>
  <!-- java 파일을 가상의 웹페이지 주소로 변환 -->
  <servlet-mapping><!-- 실제 웹에서 작동 될 수 있게 매핑 -->
	  <servlet-name>search_name</servlet-name><!-- servlet 태그에서 생성된 별명 명칭을 가져옴 -->
	  <url-pattern>/servlet1.do</url-pattern><!-- do로 이름을 바꿈 --><!-- 가상의 웹주소 -->
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>member</servlet-name>
  	<servlet-class>web_servlet.srevlet2</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>member</servlet-name>
  	<url-pattern>/servlet2.do</url-pattern>
  	
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>board_write</servlet-name>
  	<servlet-class>web_servlet.servlet3</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>board_write</servlet-name>
  	<url-pattern>/servlet3.do</url-pattern>
  </servlet-mapping>
  
  
</web-app>